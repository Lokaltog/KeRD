#wrap(v-class='blur: settingsVisible')
	layout(root='true', editable='{{layoutEditable}}')

settings(v-show='settingsVisible')

.footer-handle
footer
	.contents
		.layouts
			button.btn.physical(v-on='click: settingsVisible = !settingsVisible')
				i.icon-cog
			button.btn.physical(v-on='click: layoutEditable = !layoutEditable')
				i.icon-edit
		.logo
		.host.connected(v-if='wsConnected') Connected to {{config.telemachus.host}}:{{config.telemachus.port}}
		.host.disconnected(v-if='!wsConnected') Not connected
