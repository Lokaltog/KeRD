header {{body ? body.name : 'Map'}}
.content
	.monitor
		.orbital-display
			.nodes
				.apoapsis
				.periapsis

			.body-header(v-if='body && config.modules.map.showBodyDetails')
				.name {{data['v.name']}} orbiting {{body.name}}
			.body-info(v-if='body && config.modules.map.showBodyDetails && focus === "body"')
				div Radius: {{numeral(body.radius).format('0a')}}m
				div Atmosphere: {{numeral(body.atmosphere).format('0a')}}m
				div Day length: {{numeral(body.rotPeriod).format('00:00')}}
				div Srf gravity: {{numeral(body.info.surfaceGravity).format('0.00')}}m/sÂ²
				div Esc velocity: {{numeral(body.info.escapeVelocity).format('0.00a')}}m/s
				div SOI: {{numeral(body.info.soi / 1000).format('0.0')}}km
			.body-info(v-if='body && config.modules.map.showBodyDetails && focus === "vessel"')
				div AP: {{numeral(data['o.ApA']).format('0.000 a')}}m
				div PE: {{numeral(data['o.PeA']).format('0.000 a')}}m
				div ALT: {{numeral(data['v.altitude']).format('0.000 a')}}m
		.actions
			button.dark.focus(v-on='click: toggleFocus', v-text='focus')
			button.dark.atmosphere(v-on='click: toggleAtmosphere') Atmosphere
			button.dark.biome.toggle(v-on='click: toggleBiome', v-class='on: showBiome') Biome
